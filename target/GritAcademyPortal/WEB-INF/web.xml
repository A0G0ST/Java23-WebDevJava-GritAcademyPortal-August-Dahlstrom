<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

   <display-name>GritAcademyPortal</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CoursesServlet</servlet-name>
        <servlet-class>com.example.CoursesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CoursesServlet</servlet-name>
        <url-pattern>/courses</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserPageServlet</servlet-name>
        <servlet-class>com.example.UserPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserPageServlet</servlet-name>
        <url-pattern>/userPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.example.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>StudentCoursesServlet</servlet-name>
    <servlet-class>com.example.StudentCoursesServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>StudentCoursesServlet</servlet-name>
    <url-pattern>/studentCourses</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>TeacherCoursesServlet</servlet-name>
    <servlet-class>com.example.TeacherCoursesServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>TeacherCoursesServlet</servlet-name>
    <url-pattern>/teacherCourses</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>AllStudentsServlet</servlet-name>
    <servlet-class>com.example.AllStudentsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>AllStudentsServlet</servlet-name>
    <url-pattern>/allStudents</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>StudentCoursesDetailServlet</servlet-name>
    <servlet-class>com.example.StudentCoursesDetailServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>StudentCoursesDetailServlet</servlet-name>
    <url-pattern>/studentCoursesDetail</url-pattern>
</servlet-mapping>
<servlet>
    <servlet-name>CourseDetailsServlet</servlet-name>
    <servlet-class>com.example.CourseDetailsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>CourseDetailsServlet</servlet-name>
    <url-pattern>/courseDetails</url-pattern>
</servlet-mapping>



    <!-- VÃ¤lkomstsida -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
